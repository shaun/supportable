<div class="title">Sign Up For Supportable</div>

<%= render :partial => "shared/message" %>

<div class="formWrapper" style="height: 275px;">
	<form action="" method="post">
		<div class="label">First Name</div><div class="field"><input type="text" name="manager[first_name]" value="<%= params[:manager] ? params[:manager][:first_name] : "" %>"></div>
		<div class="label">Last Name</div><div class="field"><input type="text" name="manager[last_name]" value="<%= params[:manager] ? params[:manager][:last_name] : "" %>"></div>
		<div class="label">E-mail</div><div class="field"><input type="text" name="manager[email]" value="<%= params[:manager] ? params[:manager][:email] : "" %>"></div>
		<div class="label">Password</div><div class="field"><input type="password" name="manager[password]" ></div>
		<div class="label">Password Confirmation</div><div class="field"><input type="password" name="password_confirmation"></div>
		<div class="label">Company Name</div><div class="field"><input type="text" name="company[name]" value="<%= params[:company] ? params[:company][:name] : "" %>"></div>
		<div class="label">Company Homepage</div><div class="field"><input type="text" name="company[homepage]" value="<%= params[:company] ? params[:company][:homepage] : "" %>"></div>
	
		<div class="submitWrapper"><input type="submit" value="Sign Up Now!"></div>
	</form>
</div>
